unit UF_Principal;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs, FMX.Objects,
  FMX.Controls.Presentation, FMX.StdCtrls;

type
  TFrmPrincipal = class(TForm)
    RectangleMenu: TRectangle;
    recMenuLateralPerfil: TRectangle;
    Rectangle1: TRectangle;
    Label1: TLabel;
    Image1: TImage;
    Rectangle2: TRectangle;
    Label2: TLabel;
    Rectangle3: TRectangle;
    Label3: TLabel;
    Rectangle4: TRectangle;
    Image7: TImage;
    Image5: TImage;
    Image2: TImage;
    Label4: TLabel;
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
    procedure OnExecutarAposValidarConexao();
  public
    { Public declarations }

  end;

var
  FrmPrincipal: TFrmPrincipal;

implementation

uses
  uDataModulo, Loading;

{$R *.fmx}

procedure TFrmPrincipal.FormShow(Sender: TObject);
begin
  TLoading.show('Verificando conexão com API...', FrmPrincipal);
  DataModulo.RestConfig.ValidaConexaoAPI(OnExecutarAposValidarConexao);
end;

procedure TFrmPrincipal.OnExecutarAposValidarConexao;
begin
  TLoading.Hide;
end;

end.
